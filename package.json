{
	"name": "KROM-be",
	"version": "1.0.14",
	"description": "Krom-BE",
	"author": "Arief Kurnia",
	"repository": "ariefardi/krom-be",
	"license": "MIT",
	"main": "index.ts",
	"private": true,
	"scripts": {
		"build": "tsup",
		"start": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
		"start:prod": "node dist/index.js",
		"lint": "biome lint",
		"lint:fix": "biome lint --fix",
		"format": "biome format --write",
		"test": "vitest run",
		"test:cov": "vitest run --coverage",
		"check": "pnpm lint && pnpm format && pnpm build && pnpm test",
		"migrate": "npx knex migrate:latest",
		"seed": "npx knex seed:run",
		"init": "npm run migrate && npm run seed",
		"docker": "docker compose up --build",
		"dev": "npm run init && npm run start",
		"docker-migrate": "docker compose exec app npx knex migrate:latest",
		"docker-seed": "docker compose exec app npx knex seed:run"
	},
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "7.3.0",
		"@faker-js/faker": "^9.6.0",
		"cors": "2.8.5",
		"dotenv": "16.4.7",
		"envalid": "8.0.0",
		"esbuild": "^0.25.1",
		"express": "4.21.2",
		"express-rate-limit": "7.5.0",
		"express-validator": "^7.2.1",
		"faker": "^6.6.6",
		"helmet": "8.1.0",
		"http-status-codes": "2.3.0",
		"knex": "^3.1.0",
		"mysql2": "^3.13.0",
		"pino": "9.6.0",
		"pino-http": "10.4.0",
		"pino-pretty": "13.0.0",
		"swagger-ui-express": "5.0.1",
		"tsx": "4.19.3",
		"zod": "3.24.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/cors": "2.8.17",
		"@types/express": "5.0.0",
		"@types/node": "^22.13.10",
		"@types/supertest": "6.0.2",
		"@types/swagger-ui-express": "4.1.8",
		"@vitest/coverage-v8": "3.0.9",
		"supertest": "7.0.0",
		"tsup": "8.4.0",
		"typescript": "5.8.2",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.0.9"
	},
	"tsup": {
		"entry": [
			"src",
			"!src/**/__tests__/**",
			"!src/**/*.test.*"
		],
		"splitting": false,
		"sourcemap": true,
		"clean": true
	}
}
